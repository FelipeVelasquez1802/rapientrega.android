<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    tools:context=".presentation.views.activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/component_action_bar_single" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUsername"
                style="@style/TextInputLayoutTheme">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextTheme"
                    android:drawableStart="@drawable/ic_person_white"
                    android:drawableLeft="@drawable/ic_person_white"
                    android:hint="@string/username"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/TextInputLayoutTheme">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextTheme"
                    android:drawableStart="@drawable/ic_email_white"
                    android:drawableLeft="@drawable/ic_email_white"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/TextInputLayoutTheme.Password">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextTheme"
                    android:drawableStart="@drawable/ic_lock_white"
                    android:drawableLeft="@drawable/ic_lock_white"
                    android:hint="@string/password"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPasswordRepeat"
                style="@style/TextInputLayoutTheme.Password">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextTheme"
                    android:drawableStart="@drawable/ic_lock_white"
                    android:drawableLeft="@drawable/ic_lock_white"
                    android:hint="@string/repeat_password"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilIdentificationCard"
                style="@style/TextInputLayoutTheme">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextTheme"
                    android:drawableStart="@drawable/ic_fingerprint_white_24dp"
                    android:drawableLeft="@drawable/ic_fingerprint_white_24dp"
                    android:hint="@string/identificationCard"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCellphone"
                style="@style/TextInputLayoutTheme">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextTheme"
                    android:drawableStart="@drawable/ic_phone_iphone_white_24dp"
                    android:drawableLeft="@drawable/ic_phone_iphone_white_24dp"
                    android:hint="@string/cellphone"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <include
            layout="@layout/component_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btCreateAccount"
            style="@style/ButtonTheme"
            android:layout_weight="0"
            android:onClick="onClick"
            android:text="@string/send" />

    </LinearLayout>


</ScrollView>