<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/th_icon"
        android:src="@drawable/ic_user"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tvName"
        style="@style/TextViewTheme.Title"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/ivPhoto"
        android:layout_toRightOf="@id/ivPhoto"
        android:text="@string/name"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvCategory"
        style="@style/TextViewTheme"
        android:layout_below="@id/tvName"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/ivPhoto"
        android:layout_toRightOf="@id/ivPhoto"
        android:text="@string/category"
        android:textColor="@android:color/black" />

    <include
        layout="@layout/component_is_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCategory"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPhoto"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewTheme"
            android:layout_weight="1"
            android:text="@string/minimum_order"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />

        <TextView
            style="@style/TextViewTheme"
            android:layout_weight="1"
            android:text="@string/shipping_cost"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMinimumOrder"
            style="@style/TextViewTheme"
            android:layout_weight="1"
            android:text="@string/minimum_order"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvShippingCost"
            style="@style/TextViewTheme"
            android:layout_weight="1"
            android:text="@string/shipping_cost"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>
</RelativeLayout>