<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">-->
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="android:Theme.Material" tools:targetApi="lollipop">
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="SplahTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>

    </style>

    <style name="TextViewTheme" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewTheme.Qualification" parent="TextViewTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TextViewTheme.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewTheme.paragraph">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--  Style TextInputLayout  -->
    <style name="FloatingHintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="errorTextColor">@android:color/white</item>
        <item name="errorIconTint">@color/colorSecondaryLight</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="android:background">@drawable/theme_text_input_layout_white</item>
    </style>

    <style name="TextInputLayoutTheme.Stroke" parent="TextInputLayoutTheme">
        <item name="boxStrokeColor">@android:color/darker_gray</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:background">@drawable/theme_text_input_layout_stroke</item>
    </style>

    <style name="TextInputLayoutTheme.Password" parent="TextInputLayoutTheme">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="EditTextTheme" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="EditTextTheme.Stroke" parent="EditTextTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextInputLayoutTheme.Dropdown">
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <!--style name="ButtonTheme" parent="android:Widget.Button"-->
    <style name="ButtonTheme" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/theme_button_white</item>
    </style>

    <style name="ButtonTheme.Stroke" parent="ButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/theme_button_stroke</item>
    </style>

    <style name="CustomButtonThemeBack" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="CustomButtonThemeSend" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="PanelTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/th_panel</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="BottomNavigationViewTheme" parent="@style/Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:itemBackground">@color/colorGray</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="progressBarPrimaryColor" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/theme_spinner_dark</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
